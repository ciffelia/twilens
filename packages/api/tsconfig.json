{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "noEmit": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "esModuleInterop": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "$/prisma": ["./prisma/generated-client"]
    }
  },

  "include": ["./src/**/*"],

  "ts-node": {
    "files": true
  }
}
