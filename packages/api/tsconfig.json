{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],

    "noEmit": true,

    "strict": true,

    "baseUrl": ".",
    "paths": {
      "$/prisma": ["./prisma/generated-client"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["./src/**/*"],

  "ts-node": {
    "files": true
  }
}
