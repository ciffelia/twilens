generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["groupBy"]
  output          = "./generated-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tweet {
  id        String   @id
  user      String
  createdAt DateTime
  text      String
  source    String
  retweets  Int
  likes     Int

  @@index([user])
  @@index([createdAt])
  @@index([text])
  @@index([source])
  @@index([retweets])
  @@index([likes])
}
